html
	head
		meta(charset="utf-8")
		meta(
			name="viewport"
			content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
		)
		title Login
		link(
			rel="stylesheet"
			href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
			integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
			crossorigin="anonymous"
		)
		link(
			rel="stylesheet" 
			href="./css/login.css"
		)
		link(
			href="node_modules/@fortawesome/fontawesome-free/css/fontawesome.css"
			rel="stylesheet"
		)
		link(
			href="node_modules/@fortawesome/fontawesome-free/css/brands.css"
			rel="stylesheet"
		)
		link(
			href="node_modules/@fortawesome/fontawesome-free/css/solid.css"
			rel="stylesheet"
		)
	body
		img(
			id="loader"
			hidden
			src="./images/loader.svg"
			style="width:150px;"
			alt="")
		div(class="login")
			form(
				method="post"
				id="login-form"
			)
				h2(class="sr-only") Login Form
				div(class="icon")
					i(class="fas fa-lock")
				div(class="form-group")
					input(
						class="form-control"
						type="email"
						name="email"
						placeholder="Email(Team Leader)"
						required
					)
				div(class="form-group")
					input(
						class="form-control"
						type="password"
						name="password"
						placeholder="Password"
						required
					)
				div(class="form-group")
					button(class="btn btn-primary btn-block" type="submit") Log In
				a(class="forgot" href="#" data-toggle="modal" data-target="#forgotModal") Forgot your password?
				a(class="newuser" href="register.html") New User
			div(hidden class="alert alert-danger" id="error-msg" role="alert")
			<!-- Modal -->
		div(class="modal fade" id="forgotModal" tabindex="-1" role="dialog"  aria-hidden="true")
			div(class="modal-dialog" role="document")
				div(class="modal-content")
					div(class="modal-header")
						h5(class="modal-title" id="forgotModal") Recover Password
						button( type="button" class="close" data-dismiss="modal" aria-label="Close")
							span( aria-hidden="true") &times;
					div(class="modal-body")
						div(hidden class="alert alert-danger" id="recovery-error" role="alert") 
						div(hidden class="alert alert-success" id="mail-sent-msg" role="alert") Recovery link send successfully
						form
							div( class="form-group")
								label( for="input-email" class="col-form-label") Email:
								input(type="email" class="form-control" id="input-email")
					div(class="modal-footer")
						button(type="button" class="btn btn-secondary" data-dismiss="modal") Close
						button( type="button" id="recover-password" class="btn btn-primary") Submit
		script(src="./js/login.js")
		script(
			src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
			integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
			crossorigin="anonymous"
		)
		script(
			src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
			integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
			crossorigin="anonymous"
		)
		script(
			src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
			integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
			crossorigin="anonymous"
		)
